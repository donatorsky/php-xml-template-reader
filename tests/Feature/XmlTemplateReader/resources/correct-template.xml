<?xml version="1.0" encoding="UTF-8" ?>
<template xmlns:tpl="http://www.w3.org/2001/XMLSchema-instance"
          tpl:noNamespaceSchemaLocation="../../../../src/xml-template-reader.xsd">
    <root tpl:type="single"
          tpl:collectAttributes="all">
        <actors tpl:type="single">
            <actor tpl:type="collection"
                   id="required | integer | greaterThan:0" />
        </actors>
        <foo:singers tpl:type="single">
            <foo:singer tpl:type="collection"
                        tpl:collectAttributes="all"
                        tpl:contents="trimmed"
                        bar:id="integer" />
        </foo:singers>
        <bar.writers tpl:type="single">
            <bar.writer tpl:type="collection"
                        tpl:collectAttributes="all"
                        tpl:contents="trimmed"
                        bar.id="integer" />
        </bar.writers>
    </root>
</template>
